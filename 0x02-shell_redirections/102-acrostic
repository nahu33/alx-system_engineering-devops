#!/bin/bash

# Usage: ./102-acrostic <file>

# Loop over each line of the input file, extract the first character,
# and append it to the decoded message.
while read -r line || [[ -n "$line" ]]; do
    decoded="${decoded}${line:0:1}"
done < "${1:-/dev/stdin}"

# Print the decoded message with a newline at the end.
echo "${decoded}"$'\n'

